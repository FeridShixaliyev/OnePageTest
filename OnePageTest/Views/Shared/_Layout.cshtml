            <div class="container-fluid">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-area="Manage" asp-controller="Dashboard" asp-action="Index" class="navbar-brand"><img src="~/assets/css/image/logo (1).svg" alt=""></a>
                }
                else
                {
                    <a class="navbar-brand"><img src="~/assets/css/image/logo (1).svg" alt=""></a>

                }
