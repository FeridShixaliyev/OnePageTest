                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Clients</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a><i class="fa-solid fa-user" style="font-size: 26px;color: aqua;cursor:pointer"></i></a>
                                <span style="color: aqua;cursor: pointer;">@User.Identity.Name</span>
                            </li>
                            <li class="nav-item login">
                                <a asp-controller="Auth" asp-action="LogOut"><i class="fa-solid fa-person-hiking"></i></a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item login">
                                <a asp-controller="Auth" asp-action="Login"><i class="fa-solid fa-arrow-right-to-bracket"></i></a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
