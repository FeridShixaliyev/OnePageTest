@model List<Carts>
@{
    ViewData["Title"] = "Carts";
}
<div class="container mt-5">

    <div class="create">
        <a class=" btn btn-success" asp-controller="cart" asp-action="create">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Logo</th>
                <th scope="col">Title</th>
                <th scope="col">Text</th>
                <th scope="col">Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.Id</th>
                <td>
                    @(Html.Raw(item.Logo))
                </td>
                <td>@item.Title</td>
                <td>@item.Text</td>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="cart" asp-action="edit" asp-route-id="@item.Id"style="margin-bottom: 5px;">edit</a>
                    <a class="btn btn-outline-danger" asp-controller="cart" asp-action="delete" asp-route-id="@item.Id">delete</a>
                </td>
            </tr>
            }

        </tbody>
    </table>

</div>
